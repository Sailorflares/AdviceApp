<p>User Show HTML ERB</p>

<div class="col-md-12">
  <%= link_to 'Add Advice', new_advice_path %>
</div>

<div class='wrapper'>
  <% @user.advices.each do |advice| %>
  <% advice.user_advices.each do |user_advice| %>
    <div class="col-md-4 user-advice" data-advice-id='<%= advice.id %>' data-user-advice-id='<%= user_advice.id %>'>
      <div class="thumbnail" >
        <div class="caption">
          <p><%= advice.url %></p>
          <p>Taggs will go here...</p>
          <p>
            <a href='users/<%= @user.id %>/user_advices/<%=user_advice.id %>' data-method='post' class="btn btn-primary btn-worked" role="button">It worked! :)</a> 
            <a href="#" class="btn btn-default btn-didnt-work" role="button">Not so much :(</a>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  <%end%> 
</div>
<p>
<% @user.advices.each do |advice| %>
<% advice.user_advices.each do |thing| %>
<%= thing.upvote %>
<% end %>
<% end %>
</p>
