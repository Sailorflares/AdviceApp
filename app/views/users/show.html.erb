<p>User Show HTML ERB</p>

<div class="col-sm-12 col-md-12">
  <%= link_to 'Add Advice', new_advice_path %>
</div>

<% @user.advices.each do |advice| %>
<% advice.user_advices.each do |user_advice| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption" data-advice-id='<%= advice.id %>' data-user-advice-id='<%= user_advice.id %>'>
        <p><%= advice.url %></p>
        <p>Taggs will go here...</p>
        <p>
          <a class="btn btn-primary btn-worked" role="button">It worked! :)</a> 
          <a href="#" class="btn btn-default btn-didnt-work" role="button">Not so much :(</a>
        </p>
      </div>
    </div>
  </div>
<% end %>
<%end%> 

<p>
<% @user.advices.each do |advice| %>
<% advice.user_advices.each do |thing| %>
<%= thing.upvote %>
<% end %>
<% end %>
</p>
